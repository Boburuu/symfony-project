{% extends "layout.html.twig" %}


{% block title %}
    Votre compte
    {{parent()}}
{% endblock %}

{% block body %}
    <section class="container mt-4">
        <h1 class="text-center text-light">
            Bonjour
            {{ user.fullName}}
        </h1>
        <div class="user-content card p-3 mt-4">
            <div class="row align-items-start">
                <div class="col-md-4">
                    {% if user.imageName %}
                        <div class="user-image">
                        <img src="{{vich_uploader_asset(user, 'imageFile') }}" alt="{{user.fullName}}">
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <h2>Vos informations :</h2>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <p class="mb-0">
                                <strong>Nom: </strong>
                                {{user.fullName}}
                            </p>
                             <p >
                                <strong>Age : </strong>
                                {{user.age}}
                            </p>
                            <p>
                                <strong>Email: </strong>
                                {{user.email}}
                            </p>
                        </div>
                          <div class="col-md-6">
                             <p class="mb-0">
                                <strong>Username : </strong>
                                {{user.username}}
                            </p>
                             <p class="">
                                <strong>Ville : </strong>
                                {{user.ville}}
                            </p>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}